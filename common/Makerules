#
#  Compiler settings
#
JAVAC     := jikes +E
CLASSPATH := $(CLASSPATH):/opt/java/jdk1.2/jre/lib/rt.jar:.
#JAVAC	:= javac
JAVADOC := javadoc
JAVA    := java
JAVAOPT := -g

#
#  Environment settings
#
CLASSDIR := /var/spool/java
PKREL    := $(subst .,/,$(PACKAGE))
PKDIR    := $(CLASSDIR)/$(PKREL)
DOCDIR   := $(CLASSDIR)/.doc/$(subst .,/,$(PACKAGE))

#
#  Rule to build .class files
#
$(PKDIR)/%.class: %.java
	$(JAVAC) $(JAVAOPT) -d $(CLASSDIR) $?

%.run: $(PKDIR)/%.class
	$(JAVA) $(PACKAGE).$*
#
#  Given modules, calculate filenames.
#
CLASSES := $(patsubst %, $(PKDIR)/%.class, $(MODULES))
SOURCES := $(patsubst %, %.java,  $(MODULES))

#
#  Default rules
#
.PHONY: all
all: $(CLASSES)
ifneq (, $(SUBDIRS))
	(for i in $(SUBDIRS); do $(MAKE) -$(MAKEFLAGS) -C $$i || exit 1; done)
endif

.PHONY: doc
doc:
	-mkdir -p $(DOCDIR)
ifneq (, $(MODULES))
	$(JAVADOC) -d $(DOCDIR) $(SOURCES)
endif
ifneq (, $(SUBDIRS))
	(for i in $(SUBDIRS); do $(MAKE) -$(MAKEFLAGS) -C $$i doc; done)
endif

.PHONY: initial
initial:
ifneq (, $(SOURCES))
	$(JAVAC) $(JAVAOPT) -d $(CLASSDIR) $(SOURCES)
endif
ifneq (, $(SUBDIRS))
	(for i in $(SUBDIRS); do $(MAKE) -$(MAKEFLAGS) -C $$i initial; done)
endif

.PHONY: clean
clean:
	-rm $(PKDIR)/*.class
ifneq (, $(SUBDIRS))
	(for i in $(SUBDIRS); do $(MAKE) -$(MAKEFLAGS) -C $$i clean; done)
endif

